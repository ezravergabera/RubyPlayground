<div id="<%= dom_id cart %>" class="w-full sm:w-auto my-5 space-y-5">
  <h2 class="font-bold text-lg mb-3">Your Pragmatic Cart</h2>

  <ul class="list-disc list-inside">
  <% cart.line_items.each do |item| %>
    <li><%= item.product.title %>: <strong><%= number_to_currency(item.product.price) %></strong></li>
  <% end %>
  </ul>
</div>
